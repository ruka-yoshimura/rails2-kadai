

<div class="search_form">
    <%= search_form_for @q, url: search_path do |f| %>
   <%= f.search_field :address_cont, class: 'form-control', placeholder: 'エリア名を入力' %>
   <%= f.search_field :room_name_or_room_detail_cont, class: 'form-control', placeholder: 'キーワード名を入力' %>
   <%= f.submit '検索', class: 'btn btn-primary' %>
    <% end %>
</div>

<%= @rooms_total%>

<table>
<thead>
   <tr>
     <th>画像</th>
     <th>施設名</th>
     <th>紹介文</th>
     <th>料金</th>
     <th>住所</th>
   </tr>
 </thead>
 
 <tbody>
   <% @rooms.each do |room| %>
     <tr>
       <td><%= image_tag room.room_img.url %></td>
       <td><%= room.room_name %></td>
       <td><%= room.room_detail %></td>
       <td><%= room.fee %></td>
       <td><%= room.address %></td>
       <td>
         <%= link_to "詳細はこちら", room %>
       </td>
     </tr>
   <% end %>
 </tbody>
</table>

<p><%= link_to "施設新規登録", :new_room %></p>
