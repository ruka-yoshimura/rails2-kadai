
<table>
<thead>
   <tr>
     <th>画像</th>
     <th>施設名</th>
     <th>紹介文</th>
     <th>料金</th>
     <th>住所</th>
   </tr>
 </thead>
 
 <tbody>
   <% @search_rooms.each do |room| %>
     <tr>
       <td><%= image_tag room.room_img.url %></td>
       <td><%= room.room_name %></td>
       <td><%= room.room_detail %></td>
       <td><%= room.fee %></td>
       <td><%= room.address %></td>
       <td>
         <%= link_to "詳細はこちら", room %>
       </td>
     </tr>
   <% end %>
 </tbody>
</table>

