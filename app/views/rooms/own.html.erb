<h1>登録済み一覧</h1>

<table>
<thead>
   <tr>
     <th>画像</th>
     <th>施設名</th>
     <th>紹介文</th>
     <th>料金</th>
     <th>作成日</th>
   </tr>
 </thead>
 
 <tbody>
   <% @rooms.each do |room| %>
     <tr>
       <td><%= image_tag room.room_img.url, size: '150x100' %></td>
       <td><%= link_to room.room_name, room %></td>
       <td><%= room.room_detail %></td>
       <td><%= room.fee %></td>
       <td><%= room.created_at.strftime('%Y/%m/%d')%></td>
       <td>
         <%= link_to "編集", edit_room_path(room.id) %>
       </td>
       <td>
         <%= link_to '削除', room_path(room.id), method: :delete %>
       </td>
     </tr>
   <% end %>
 </tbody>
</table>